#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

int main(void)
{
    char *modes[3] = { "animals.txt", "englit.txt"/*, "music.txt", "science.txt"*/, "hardwords.txt" };
    for (int i = 0, length = sizeof(modes) / 8; i < length; i++) {
        printf("%s\n", modes[i]);
    }

    /*(const char *text =
    "Hello party people \n"
    "does this indent \n"
    "We shall see \n";

    printf("%s\n", text);*/

    printf("Welcome to hangman. Choose your category: \n");
    printf("Animals\nLiterature\nMusic\nScience\nDifficult words\n");

    char category[20];
    scanf("%s", category);

    FILE *inptr;
    char *word;

    if (strncmp(category, "Animals", 7) == 0) {
        inptr = fopen("animals.txt", "r");
    } else if (strncmp(category, "Literature", 18) == 0) {
        inptr = fopen("englit.txt", "r");
    } else if (strncmp(category, "Difficult words", 15) == 0) {
        inptr = fopen("hardwords.txt", "r");
    } else {
        fprintf(stderr, "Error. Please choose one of the categories listed.");
        return 1;
    }
    //printf("%s\n", category);
    //FILE *inptr = fopen("animals.txt", "r");
    if (inptr == NULL)
    {
        fprintf(stderr, "There was an error.\n");
        return 2;
    }

    char c[70];
    for (int line = 0; line < 20; line++)
    {
        fseek(inptr, 0, SEEK_CUR);
        fgets(c, 69, inptr);
        //printf("%s", c);
    }

    fclose(inptr);
    return 0;
    //char *word;
}
