#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

int main(int argc, char *argv[]);
{
    if (argc < 1) {
        fprintf(stderr, "Usage: ./files\n");
        return 1;
    } else if (argc > 4) {
        fprintf(stderr, "Usage: ./files [action] [file name/extension/keyword] [directory]");
        return 2;
    }
    char file_path[50];
    printf("Enter a file path (separated by /) less than 50 characters long: \n");
    scanf("%s", file_path);
    if (strlen(file_path) > 50) {
        printf("Invalid length.");
        return 1;
    }
    for (int i = 0, n = strlen(file_path); i < n; i++) {
        if (strncmp(&file_path[i], " ", 1) == 0) {
            file_path[i] = '/';
            printf("%c", file_path[i]);
        } else {
            printf("%c", file_path[i]);
        }
    }
    //printf("%s\n", file_path);
    return 0;
}
